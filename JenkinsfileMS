pipeline {
    agent any
    
    stages {
        stage("Starting"){
            steps {
                echo "Starting with Jenkins Job"
            }
        }

        stage('Clean') {
            steps {
                bat './gradlew clean'
            }
        }
        
        stage('Build') {
            steps {
                bat './gradlew assembleDebug'
            }
        }

        stage('Test') {
            steps {
                bat './gradlew testDebug'
            }
        }

        stage('Publish to AppCenter') {
            // bat 'appcenter distribute release --app "your-app-id" --token "your-access-token" --file app/build/outputs/apk/debug/app-debug.apk'
            environment {
                APPCENTER_API_TOKEN = credentials('at-this-moment-you-should-be-with-us')
            }
            steps {
                appCenter apiToken: APPCENTER_API_TOKEN,
                    ownerName: 'janes-addiction',
                    appName: 'ritual-de-lo-habitual',
                    pathToApp: 'app/build/outputs/apk/debug/app-debug.apk',
                    distributionGroups: 'casey, niccoli'
            }
        }
    }
}

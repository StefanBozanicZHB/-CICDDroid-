pipeline {
    agent any

    parameters {
        booleanParam(defaultValue: false, description: "DEBUG version?", name: "isDebug")
    }

    stages {
        stage('Copy Secret File') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'cicdroid.properties', variable: 'SECRET_FILE')]) {
                        bat "copy %SECRET_FILE% ."
                    }
                }
            }
        }
    }
}
